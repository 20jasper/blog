---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Nav.astro';
import { NAME } from '../consts';

type Props = {
	title: string;
	description?: string;
};

const { title, description } = Astro.props;
const today = new Date();
---

<!doctype html>
<html lang="en">
	<BaseHead
		title={title}
		description={description ?? ''}
	/>

	<body
		class="flex h-screen flex-col bg-background px-4 text-xl text-foreground"
	>
		<Header border="bottom" />
		<slot />
		<div class="mt-auto">
			<Header border="top" />
			<footer class="p-4">
				<p class="text-center text-sm text-foreground-secondary">
					&copy; {today.getFullYear()}
					{NAME}. &copy; 2020 VSCode Orange Theme <a
						href="https://marketplace.visualstudio.com/items?itemName=Rax.vscode-orange-theme"
						>Rax Team</a
					>. All rights reserved.
				</p>
			</footer>
		</div>
	</body>
</html>
