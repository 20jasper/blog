---
type Props = {
	id: string;
};

const { id } = Astro.props;
---

<script
	is:inline
	async
	src=`https://www.googletagmanager.com/gtag/js?id=${id}`
></script>
<script is:inline define:vars={{ id }}>
	window.dataLayer = window.dataLayer || [];
	const gtag = () => {
		dataLayer.push(arguments);
	};
	gtag('js', new Date());

	gtag('config', id);
</script>
