---
import FormattedDate from '../components/FormattedDate.astro';

type Props = {
	title: string;
	date: Date;
	updatedDate?: Date | undefined;
	heroImage?: string | undefined;
	children: any;
};

const { title, date, updatedDate, heroImage } = Astro.props;
---

<article
	class:list={[
		'mx-auto py-8',
		'prose prose-invert lg:prose-xl',
		'prose-inline-code:rounded-sm prose-inline-code:bg-background-secondary prose-inline-code:p-0.5',
		'prose-a:text-foreground hover:prose-a:text-accent',
		'prose-headings:text-foreground',
	]}
>
	{
		heroImage && (
			<img
				width={1020}
				height={510}
				src={heroImage}
				alt=""
				class="mx-auto block w-full rounded-xl shadow-[var(--box-shadow)]"
			/>
		)
	}
	<div class="max-w-prose p-4">
		<div class="mb-2 py-2 text-center">
			<h1>{title}</h1>
			<div class="mb-1 text-foreground-secondary">
				<FormattedDate date={date} />
				{
					updatedDate && (
						<div class="italic">
							Last updated on <FormattedDate date={updatedDate} />
						</div>
					)
				}
			</div>
		</div>
		<slot />
	</div>
</article>
