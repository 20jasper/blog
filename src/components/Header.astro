---
import HeaderLink from './HeaderLink.astro';
---

<header class="py-2">
	<nav>
		<ul class="mx-auto flex justify-center">
			<li class="px-2 py-4">
				<HeaderLink
					class="px-2 py-4"
					href="/"
					>Home</HeaderLink
				>
			</li>
			<li class="px-2 py-4">
				<HeaderLink
					class="px-2 py-4"
					href="/about"
					>About</HeaderLink
				>
			</li>
		</ul>
	</nav>
</header>
<style>
	nav a {
		color: var(--black);
	}
	nav a.active {
		border-bottom: 4px solid var(--accent);
	}
</style>
