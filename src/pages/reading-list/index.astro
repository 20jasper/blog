---
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FormattedDateRange from '../../components/FormattedDateRange.astro';

const bookArticles = (await getCollection('book')).sort(
	(a, b) => b.data.readDate.end.valueOf() - a.data.readDate.end.valueOf(),
);
---

<BaseLayout
	title={SITE_TITLE}
	description={SITE_DESCRIPTION}
>
	<main class="mx-auto my-4 max-w-prose text-xl">
		<h1 class="my-5 text-3xl font-bold">Reading List</h1>
		<p class="mb-4">
			Here's some books I've read, some I want to read, and some notable
			articles ðŸ˜€
		</p>
		<p class="mb-4">My goal is to read a technical book a month</p>
		<section class="py-6">
			<h2 class="mb-4 text-2xl font-semibold">Books I've Read</h2>
			<ul class="flex flex-col gap-8">
				{
					bookArticles.map((post) => (
						<li>
							<a
								href={`${Astro.url}/${post.slug}/`}
								class="block"
							>
								<h4 class="leading-none">{post.data.title}</h4>
							</a>
							<p class="pt-2 text-foreground-secondary">
								{post.data.description}
							</p>
							<p class="text-foreground-secondary">
								<FormattedDateRange
									start={post.data.readDate.end}
									end={post.data.readDate.start}
								/>
							</p>
						</li>
					))
				}
			</ul>
		</section>
	</main>
</BaseLayout>
