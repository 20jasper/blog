---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout
	title={SITE_TITLE}
	description={SITE_DESCRIPTION}
>
	<main class="mx-auto my-4 max-w-prose text-xl">
		<h1 class="my-5 text-3xl font-bold">Jacob Asper's site!</h1>
		<p class="mb-4">
			I want to add my future booklist and thoughts about books I'm reading as
			well as my favorite articles. I'll add some actual blogs and my YouTube
			Series too
		</p>
		<section class="py-6">
			<h2 class="mb-4 text-2xl font-semibold">Blogs</h2>
			<ul class="flex flex-col gap-8">
				{
					posts.map((post) => (
						<li>
							<a
								href={`/blog/${post.slug}/`}
								class="block"
							>
								<h4 class="leading-none">{post.data.title}</h4>
							</a>
							<p class="m-0 text-foreground-secondary">
								<FormattedDate date={post.data.pubDate} />
							</p>
						</li>
					))
				}
			</ul>
		</section>
	</main>
</BaseLayout>
